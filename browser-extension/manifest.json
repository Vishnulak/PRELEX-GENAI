{
  "manifest_version": 3,
  "name": "Informed Consent Protector",
  "version": "1.0",
  "description": "Highlights risky agreement/payment buttons after AI analysis.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://api.groq.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html"
}